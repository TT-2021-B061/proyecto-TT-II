<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="text-center">{{nameModule}}</h1>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 col-xxl-8 ">
            <div class="ratio ratio-16x9">
                <video src="{{links}}" controls autoplay controlslist="nodownload"></video>
            </div>
            <div class="row">
                <h4 class="mt-2">{{nameThis}}</h4>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 col-xxl-4 pt-2">
            <div class="list-group ">
                {{#each nameVideos}}
                <a href="/modulesCourse/renderVideo/{{this}}/{{_id}}" class="list-group-item list-group-item-action "
                    aria-current="true">{{eliminarPuntoFinal this}}</a>
                {{/each}}

                {{#if test}}
                <a href="/modulesCourse/test" class="list-group-item list-group-item-action"
                    aria-current="true">Cuestionario</a>
                {{/if}}

                {{#if resourcesModule}}
                    <a href="{{urlSource}}" target="_blank" class="list-group-item list-group-item-action"
                    aria-current="true">Material de consulta</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>