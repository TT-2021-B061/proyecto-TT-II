<div class="container pt-3 pb-5">
    <h1 class="text-center pb-3">Archivo con recursos de los módulos.</h1>

    {{#if noResources}}
        <div class="row align-items-center justify-content-center">
            <p class="text-center h5 py-4">No se encontró un archivo. Si requiere cargar uno con los recursos de los módulos, puede realizarlo a continuación.</p>
            <div class="col-6">
                <form action="/modulesCourse/createResourcesModules" method="POST" enctype="multipart/form-data" id="formUpdateDoc"  class="mt-3">
                    <div class="mb-3">
                        <label for="pdf" class="form-label">Subir archivo (PDF)</label>
                        <input type="file" name="pdf" id="pdf" class="form-control" aria-label="file example" required accept=".pdf">
                    </div>
                    <div class="d-grid gap-3 col-6 mx-auto mb-2 ">
                        <button class="btn btn-success" type="submit" id="btn-enviar">Subir archivo</button>
                    </div>
                </form>
            </div>
        </div>
    {{else}}
    <div class="row align-items-center justify-content-center">
        <div class="col-8">
            <div class="ratio ratio-4x3 border ">
                <embed
                type="application/pdf"
                    src="{{url}}"
                    title="PDF" allowfullscreen
                    ><embed>
            </div>

            <form action="/modulesCourse/updateResourcesModules/{{name}}" method="POST" enctype="multipart/form-data" id="formUpdateDoc" style="display: none" class="mt-3">
                    <div class="mb-3">
                        <label for="pdf" class="form-label">Subir archivo (PDF)</label>
                        <input type="file" name="pdf" id="pdf" class="form-control" aria-label="file example" required accept=".pdf">
                    </div>
                    <div class="d-grid gap-3 col-6 mx-auto mb-2 ">
                        <button class="btn btn-success" type="submit" id="btn-enviar">Confirmar actualización del archivo</button>
                    </div>
                </form>

                <div class="d-grid gap-2 d-md-flex justify-content-center pt-3">
                    <button class="btn btn-primary btn-lg" id="updateDoc">Actualizar</button>
                </div>

        </div>
    </div>
    {{/if}}

</div>


<script>
    const btnUpdateDoc = document.getElementById("updateDoc");
    btnUpdateDoc.onclick = anadirCampoUpdateDoc;


    function anadirCampoUpdateDoc() {
        var formularioDoc = document.getElementById("formUpdateDoc");

        if(formularioDoc.style.display === 'none') {
            formularioDoc.style.display = 'block';
            btnUpdateDoc.textContent = "No actualizar";
        } else {
            formularioDoc.style.display = 'none';
            btnUpdateDoc.textContent = "Actualizar";
        }
    }

</script>